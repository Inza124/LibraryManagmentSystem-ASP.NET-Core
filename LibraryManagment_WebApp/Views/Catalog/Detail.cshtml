@model LibraryManagment_WebApp.Models.Catalog.AssetDetailModel

<div class="container">
    <div class="page-header clearfix detailHeading">
        <h2 class="text-muted">View Library Item</h2>
    </div>
</div>

<div class="jumbotron">
    <div class="row">
        <div class="col-md-4">
            <div>
                <img class="detailImage" src="@Model.ImageUrl" />
            </div>
        </div>
        <div class="col-md-4">
            <p id="itemTitle">@Model.Title</p>
            <p id="itemAuthor">@Model.Author</p>
            <p id="itemStatus">@Model.Status</p>
            <p id="itemType">@Model.Type</p>
            <p id="itemLocation">@Model.CurrentLocation</p>

            @if (Model.Status == "Checked Out")
            {
                <p id="itemClient">Checked Out By: @Model.ClientName</p>
                <p><a class="btn btn-lg btn-info" role="button" asp-controller="Catalog" asp-action="CheckoutIn" asp-route-id="@Model.AssetId">Check In</a></p>
                <p><a class="btn btn-lg btn-info" role="button" asp-controller="Catalog" asp-action="Hold" asp-route-id="@Model.AssetId">Hold</a></p>
            }

            @if (Model.Status == "Avalible")
            {
                <p><a class="btn btn-lg btn-info" role="button" asp-controller="Catalog" asp-action="Checkout" asp-route-id="@Model.AssetId">Check Out</a></p>

            }

            @if (Model.Status == "Lost")
            {
                <p>This item has been lost</p>
                <p><a class="btn btn-lg btn-danger" role="buton" asp-controller="Catalog" asp-action="FoundItem" asp-route-id="@Model.AssetId">Mark Found</a></p>

            }
        </div>
        <div class="col-md-4 detailInfo">
            <table>
                <tr>
                    <td class="itemLabel">ISBN: </td>
                    <td class="itemValue">@Model.ISBN</td>
                </tr>
                <tr>
                    <td class="itemLabel">BookIndex: </td>
                    <td class="itemValue">@Model.BookIndex</td>
                </tr>
                <tr>
                    <td class="itemLabel">Replacement Cost: </td>
                    <td class="itemValue">@Model.Cost</td>
                </tr>
            </table>
        </div>
    </div>
</div>