@model LibraryManagment_WebApp.Models.Catalog.AssetIndexModel
@{ 
    <div id="assets">
        <h2>Library Catalog</h2>
        <div id="assetsTable">
            <table class="table table-condensed" id="catalogIndexTable">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Title</th>
                        <th>Author</th>
                        <th>BookIndex</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var asset in Model.Assets)
                    {
                        <tr class="assetRow">
                            <td class="">
                                <a asp-controller="Catalog" asp-action="Details" asp-route="@asset.Id">
                                <img src="@asset.ImageUrl" class="imageCell"/>
                                     </a>
                            </td>
                            <td class="">@asset.Title</td>
                            <td class="">@asset.Author</td>
                            <td class="">@asset.BookIndex</td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
}